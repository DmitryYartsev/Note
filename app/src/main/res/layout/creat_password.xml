<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dmitry.note.CreatePassword">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal"
        android:layout_gravity="top|center_horizontal"
        android:layout_height="wrap_content">
        <View
            android:layout_width="10dp"
            android:layout_margin="4dp"
            android:layout_height="10dp"
            android:id="@+id/v1"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/control_indicator"/>
        <View
            android:layout_width="10dp"
            android:layout_margin="4dp"
            android:layout_height="10dp"
            android:id="@+id/v2"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/control_indicator"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="4dp"
            android:id="@+id/v3"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/control_indicator"/>
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/v4"
            android:layout_margin="4dp"
            android:layout_gravity="center|center_horizontal"
            android:background="@drawable/control_indicator"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="1"
                android:id="@+id/b1"
                android:clickable="true"
                android:onClick="control_press"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="2"
                android:id="@+id/b2"
                android:clickable="true"
                android:layout_margin="11dp"
                android:onClick="control_press"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="3"
                android:id="@+id/b3"
                android:onClick="control_press"
                android:clickable="true"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="4"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:id="@+id/b4"
                android:clickable="true"
                android:onClick="control_press"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="5"
                android:onClick="control_press"
                android:id="@+id/b5"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="control_press"
                android:textColor="#ffffff"
                android:text="6"
                android:id="@+id/b6"
                android:clickable="true"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="7"
                android:id="@+id/b7"
                android:onClick="control_press"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:clickable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:onClick="control_press"
                android:text="8"
                android:id="@+id/b8"
                android:clickable="true"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:onClick="control_press"
                android:text="9"
                android:id="@+id/b9"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="70dp"

                android:layout_margin="11dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:layout_height="70dp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="0"
                android:id="@+id/b0"
                android:onClick="control_press"
                android:clickable="true"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="#ffffff"
                android:text="←"
                android:onClick="control_press"
                android:id="@+id/bb"
                android:clickable="true"
                android:layout_margin="11dp"
                android:background="@drawable/background_pin"
                android:gravity="center|top"
                android:paddingBottom="3dp"
                android:layout_gravity="center"
                android:textSize="45sp"
                />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_violet"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:onClick="next"
            android:id="@+id/btn_next"
            android:text="Продолжить"/>
    </LinearLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_one_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dmitry.note.One_note"
    tools:showIn="@layout/app_bar_one_note">
    <EditText
    android:layout_width="match_parent"
        android:id="@+id/name"
        android:background="#09ffffff"
        android:hint="Название"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="#fff"
        android:maxLines="1"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="#50ffffff"
        android:textCursorDrawable="@color/colorEditCursor"
        android:textSize="30sp"
    android:layout_height="wrap_content" />
    <EditText
        android:background="#09ffffff"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:hint="Текст"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:id="@+id/text"
        android:textSize="17sp"
        android:textColorHint="#50ffffff"
        android:textCursorDrawable="@color/colorEditCursor"
        android:text="123456789123456789123456789"
        android:textColor="#fff"
        android:minHeight="200dp"
        android:layout_marginBottom="20dp"
        android:gravity="top"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:text="Сохранить"
        android:clickable="true"
        android:onClick="saveChan"
        android:visibility="gone"
        android:id="@+id/save_chan"
        android:background="@drawable/btn_blue"/>

</LinearLayout>
